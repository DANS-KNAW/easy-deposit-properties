<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <appender name="FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${user.home}/easy-deposit-properties.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${user.home}/easy-deposit-properties.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%date{ISO8601}] %-5level %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="AUDIT-LOG-FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/opt/dans.knaw.nl/audit/easy-deposit-properties/easy-deposit-properties.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/var/opt/dans.knaw.nl/audit/easy-deposit-properties/easy-deposit-properties.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>[%date{ISO8601}] %msg%n</pattern>
        </encoder>
    </appender>
    <root level="warn">
        <appender-ref ref="FILE"/>
    </root>
    <logger name="nl.knaw.dans.easy" level="info"/>
    <logger name="nl.knaw.dans.easy.properties.app.graphql.middleware.AuditLog" level="info" additivity="false">
        <appender-ref ref="AUDIT-LOG-FILE"/>
    </logger>
</configuration>
